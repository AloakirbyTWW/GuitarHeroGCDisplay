<Window x:Class="NintendoSpy.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ViewWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid Name="ControllerGrid" Width="300" Height="300" VerticalAlignment="Top" HorizontalAlignment="Left">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Always On Top" Click="AlwaysOnTop_Click" IsChecked="{Binding Topmost}" />
                <MenuItem Header="Blink Reduction" Click="BlinkReductionEnabled_Click" IsChecked="{Binding BlinkReductionEnabled}" />
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</Window>
